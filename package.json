{
  "name": "contentful-marketing-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Contentful Marketing Monorepo - Next.js Web App, iOS App, and Android App",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": "Please use Yarn"
  },
  "scripts": {
    "dev:nextjs": "yarn workspace nextjs dev",
    "build:nextjs": "yarn workspace nextjs build",
    "start:nextjs": "yarn workspace nextjs start",
    "type-check:nextjs": "yarn workspace nextjs type-check",
    "lint:nextjs": "yarn workspace nextjs lint",
    "graphql-codegen:nextjs": "yarn workspace nextjs graphql-codegen:generate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "9.1.7"
  },
  "license": "MIT"
}
